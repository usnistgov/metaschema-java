								</includes>
							</licenseSet>
						</licenseSets>
						<failIfMissing>true</failIfMissing>
					</configuration>
					<!-- <executions> -->
					<!-- <execution> -->
					<!-- <id>check-license</id> -->
					<!-- <phase>verify</phase> -->
					<!-- <goals> -->
					<!-- <goal>check</goal> -->
					<!-- </goals> -->
